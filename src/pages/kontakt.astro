---
import MainLayout from "../layouts/MainLayout.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Button from "../components/Button.astro";

import { Image } from "astro:assets";

import placeholder from "../assets/images/placeholder.jpg";

import nyt1 from "../assets/images/nyt.png";
import nyt2 from "../assets/images/nyt2.png";
---

<MainLayout title="Kontakt os">
  <h1
    class="text-[#2B2B2B] georama text-[40px] mt-5 mb-5 text-center md:text-[64px]"
  >
    Kontakt os
  </h1>
  <h2
    class="text-[#2B2B2B] georama text-[20px] mx-10 text-center md:text-[20px]"
  >
    Skriv til os hvis du har spørgsmål vedrørende vores produkter, din ordre
    eller andet.
  </h2>

  <div
    class="manrope flex flex-col md:flex-row justify-start mt-10 px-5 gap-10 max-w-6xl mx-auto"
  >
    <!-- Formular -->
    <form action="/submit" method="post" class="w-full max-w-lg">
      <label for="name" class="block mb-1">Navn</label>
      <input
        type="text"
        id="name"
        name="name"
        required
        class="w-full mb-10 p-4 border border-[#2B2B2B] bg-[#EDE4DE] h-[50px]"
      />

      <label for="email" class="block mb-1">Email</label>
      <input
        type="email"
        id="email"
        name="email"
        required
        class="w-full mb-10 p-4 border border-[#2B2B2B] bg-[#EDE4DE] h-[50px]"
      />

      <label for="phone" class="block mb-1">Telefonnummer</label>
      <input
        type="tel"
        id="phone"
        name="phone"
        required
        class="w-full mb-10 p-4 border border-[#2B2B2B] bg-[#EDE4DE] h-[50px]"
      />

      <label for="message" class="block mb-1">Besked</label>
      <textarea
        id="message"
        name="message"
        rows="4"
        required
        class="w-full mb-10 p-4 border border-[#2B2B2B] bg-[#EDE4DE]"
      ></textarea>

      <div class="flex justify-center -mt-5">
        <button
          class="manrope text-[16px] font-medium bg-[#577866] hover:bg-[#455F50] text-[#F9F6F1]
         px-6 py-3 h-[60px] md:px-8 md:py-4 md:h-16 z-20 transition duration-300"
          type="submit"
        >
          Send besked
        </button>
      </div>
    </form>

    <!-- Billederne - skjult på mobil, vises på md+ -->
    <div class="hidden md:flex flex-col gap-5 max-w-md">
      <Image src={placeholder} alt="Billede 1" class="" />
      <Image src={placeholder} alt="Billede 2" class="" />
    </div>
  </div>

  <section
    class="bg-[#577866] pt-10 pb-10 mt-10 mb-10 px-5 md:px-10 md:pb-20 md:pt-20"
  >
    <div
      class="flex flex-col md:flex-row md:justify-between md:items-start gap-10 max-w-screen-xl mx-auto"
    >
      <div class="flex flex-col md:w-1/2 order-1">
        <h1
          class="text-[#F5EFE6] georama text-[40px] md:text-[64px] text-center md:text-left md:-mt-5"
        >
          Find os her
        </h1>

        <!-- Mobil kort-->
        <div class="md:hidden mt-10">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d4499.144539476696!2d12.526661976727592!3d55.679037797670475!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x465253bc217da203%3A0xafd2d70ef77d682c!2sKaffevaerk!5e0!3m2!1sda!2sdk!4v1747684391184!5m2!1sda!2sdk"
            width="100%"
            class="w-full h-[400px]"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>

        <!-- Info -->
        <ul class="manrope list-none text-[#F5EFE6] space-y-5 mt-10">
          <li class="space-y-2">
            <p class="font-bold">Butik</p>
            <p>Smallegade 22, 2000 Frederiksberg</p>
          </li>

          <li class="space-y-2">
            <p class="font-bold">Risteri</p>
            <p>Rugmarken 31, 3520 Farum</p>
          </li>

          <li class="space-y-2">
            <p class="font-bold">Åbningstider</p>
            <p>Mandag–Fredag: 08.00–17.30</p>
            <p>Lørdag–Søndag: 09.00–15.00</p>
          </li>

          <li class="space-y-2">
            <p class="font-bold">Email</p>
            <p>info@kaffevaerk.dk</p>
          </li>

          <li class="space-y-2">
            <p class="font-bold">Telefon</p>
            <p>+45 70 22 22 64</p>
          </li>
        </ul>
      </div>

      <!-- Dekstop kort -->
      <div class="hidden md:block order-2">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d4499.144539476696!2d12.526661976727592!3d55.679037797670475!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x465253bc217da203%3A0xafd2d70ef77d682c!2sKaffevaerk!5e0!3m2!1sda!2sdk!4v1747684391184!5m2!1sda!2sdk"
          width="100%"
          class="w-[800px] h-[530px] mx-auto"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"></iframe>
      </div>
    </div>
  </section>

  <div
    class="flex flex-col md:flex-row justify-center items-center gap-5 mt-10 px-5"
  >
    <Image src={placeholder} alt="" class="w-full md:w-1/3 max-w-[500px]" />
    <Image src={placeholder} alt="" class="w-full md:w-1/3 max-w-[500px]" />
    <Image src={placeholder} alt="" class="w-full md:w-1/3 max-w-[500px]" />
  </div>
</MainLayout>
