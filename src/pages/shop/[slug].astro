const { slug } = Astro.params;

// Hent specifikt produkt baseret på slug
const product = await fetch(
  `https://rzrjmncawmbiwybkfevi.supabase.co/rest/v1/products?slug=eq.${slug}`,
  {
    method: "GET",
    headers: {
      apikey:
        "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6InJ6cmptbmNhd21iaXd5YmtmZXZpIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NDU4NjM5MDQsImV4cCI6MjA2MTQzOTkwNH0.fZH4Fc4wDSH_YNjx4pfHsh8rdOatk8MoKo582D9Peow",
      Accept: "application/json",
    },
  }
)
  .then((res) => res.json())
  .then((data) => data[0]);

if (!product) {
  throw new Error(`Produkt med slug "${slug}" blev ikke fundet.`);
}

// Hent 3 anbefalede produkter (alle andre end dette produkt)
const recommendedProducts = await fetch(
  `https://rzrjmncawmbiwybkfevi.supabase.co/rest/v1/products?slug=not.eq.${slug}&limit=3`,
  {
    method: "GET",
    headers: {
      apikey:
        "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6InJ6cmptbmNhd21iaXd5YmtmZXZpIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NDU4NjM5MDQsImV4cCI6MjA2MTQzOTkwNH0.fZH4Fc4wDSH_YNjx4pfHsh8rdOatk8MoKo582D9Peow",
      Accept: "application/json",
    },
  }
).then((res) => res.json());

const weights = ["350 g", "1 kg"];

const prices = {
  "350 g": 120,
  "1 kg": 295,
};
---

<MainLayout>
  <!-- Købs afsnit -->
  <div
    class="bg-[#577866] p-5 md:flex md:items-start md:justify-between md:px-24"
  >
    <img
      class="max-w-[250px] mx-auto mt-10 md:mx-0 md:order-2 md:max-w-[450px]"
      src={product.image_url}
      alt={product.name}
    />

    <div class="md:ml-10 md:flex-1 md:order-1">
      <h1
        class="text-[#F9F6F1] georama text-[64px] mt-2 mb-1 text-center md:text-left md:text-[128px]"
      >
        {product.name}
      </h1>
      <p
        class="manrope text-[#F9F6F1] text-[16px] px-2 mb-10 md:px-0 md:max-w-xl"
      >
        {product.short_description}
      </p>

      <!-- Købstype -->
      <form class="mt-8 space-y-4">
        <div class="border-b border-[#F9F6F1] mx-auto mb-5"></div>

        <!-- Engangskøb -->
        <div>
          <div class="flex items-center gap-4">
            <input
              type="radio"
              id="one-time"
              name="purchase"
              value="one_time"
              class="w-5 h-5"
              checked
            />
            <label for="one-time" class="flex justify-between w-full">
              <span class="text-[#F9F6F1] manrope text-[16px]">Engangskøb</span>
              <span class="text-[#F9F6F1] manrope text-[16px] mx-6">
                {product.one_time_price} DKK
              </span>
            </label>
          </div>
        </div>

        <div class="border-b border-[#F9F6F1] mx-auto mb-5"></div>

        <!-- Abonnement -->
        <div>
          <div class="flex items-center gap-4">
            <input
              type="radio"
              id="subscription"
              name="purchase"
              value="subscription"
              class="w-5 h-5"
            />
            <label for="subscription" class="flex justify-between w-full">
              <span class="text-[#F9F6F1] manrope text-[16px]">Abonnement</span>
              <span class="text-[#F9F6F1] manrope text-[16px] mx-6">
                {product.subscription_price} DKK
              </span>
            </label>
          </div>
        </div>

        <div class="border-b border-[#F9F6F1] mx-auto mb-5"></div>
      </form>

      <div class="flex justify-center gap-4 mt-10">
        <button
          class="manrope text-[16px] font-medium md:text-[18px] border border-[#F9F6F1] text-[#F9F6F1] hover:bg-[#455F50] px-6 py-4 transition duration-300 md:px-6 md:py-4"
        >
          350 g
        </button>
        <button
          class="manrope text-[16px] font-medium md:text-[18px] border border-[#F9F6F1] text-[#F9F6F1] hover:bg-[#455F50] px-6 py-4 transition duration-300 md:px-6 md:py-4"
        >
          1 kg
        </button>
      </div>

      <!-- TEST KNAPPER -->

      <div class="flex justify-center gap-4 mt-10" id="weight-buttons">
        {
          weights.map((w) => (
            <button
              type="button"
              class="manrope text-[16px] font-medium md:text-[18px] border border-[#F9F6F1] text-[#F9F6F1] hover:bg-[#455F50] px-6 py-4 transition duration-300"
              data-weight={w}
            >
              {w}
            </button>
          ))
        }
      </div>
      <p class="manrope text-[18px] text-center mt-4" id="price-display">
        Pris: {prices["350g"]} DKK
      </p>

      <!-- Antal bar -->
      <div
        class="flex items-center justify-center mt-8 mx-auto w-[160px] h-12 border border-[#F9F6F1] overflow-hidden select-none"
      >
        <button
          id="btn-decrease"
          class="w-12 h-full text-[#F9F6F1] text-2xl manrope hover:bg-[#455F50] transition flex justify-center items-center"
        >
          −
        </button>

        <span
          id="quantity"
          class="flex-1 manrope text-center text-[#F9F6F1] text-xl manrope select-text"
        >
          1
        </span>

        <button
          id="btn-increase"
          class="w-12 h-full text-[#F9F6F1] text-2xl manrope hover:bg-[#455F50] transition flex justify-center items-center"
        >
          +
        </button>
      </div>

      <!-- Tilføj til kurv knap -->
      <div class="flex justify-center mt-10">
        <a
          href="#"
          class="manrope text-[16px] font-medium md:text-[18px] bg-[#F9F6F1] hover:bg-[#455F50] text-[#2B2B2B] px-6 py-4 transition duration-300 md:px-6 md:py-4"
        >
          Tilføj til kurven
        </a>
      </div>
    </div>
  </div>

  <!-- Lang beskrivelse -->
  <div class="px-5 md:px-20 mt-10">
    <Image src={kaffeplante} alt="" class="w-full max-w-5xl mx-auto h-auto" />
  </div>
  <h2
    class="text-[#2B2B2B] georama text-[40px] mt-5 mb-5 text-center md:text-[64px]"
  >
    {product.about_header}
  </h2>
  <p
    class="manrope text-[#2B2B2B] text-[16px] px-5 -md:px-0 md:text-left whitespace-pre-line"
  >
    {product.full_description}
  </p>

  <!-- Detaljer -->
  <h2
    class="text-[#2B2B2B] georama text-[40px] mt-10 mb-5 text-center md:text-[64px]"
  >
    Kaffen i detaljer
  </h2>

  <div class="w-90 border-b-1 border-[#2B2B2B] mx-auto mb-5"></div>

  <!-- Bar -->
  <p class="manrope text-[#2B2B2B] text-[16px] text-center mb-2">Ristegrad</p>
  <div class="flex gap-0.5 justify-center">
    {
      [...Array(5)].map((_, i) => (
        <div
          class={`w-16 h-9 ${i < product.roast_level ? "bg-[#577866]" : "bg-[#95B2A2]"}`}
        />
      ))
    }
  </div>

  <p class="manrope text-[#2B2B2B] text-[16px] text-center mt-5 mb-2">
    Syrlighed
  </p>
  <div class="flex gap-0.5 justify-center">
    {
      [...Array(5)].map((_, i) => (
        <div
          class={`w-16 h-9 ${i < product.acidity ? "bg-[#577866]" : "bg-[#95B2A2]"}`}
        />
      ))
    }
  </div>

  <p class="manrope text-[#2B2B2B] text-[16px] text-center mt-5 mb-2">Sødme</p>
  <div class="flex gap-0.5 mb-10 justify-center">
    {
      [...Array(5)].map((_, i) => (
        <div
          class={`w-16 h-9 ${i < product.sweetness ? "bg-[#577866]" : "bg-[#95B2A2]"}`}
        />
      ))
    }
  </div>

  <div class="w-90 border-b-1 border-[#2B2B2B] mx-auto mb-5"></div>

  <!-- Smagsnoter -->
  <p class="manrope text-[#2B2B2B] text-[16px] text-center mb-2">Smagsnoter</p>
  <p class="manrope text-[#2B2B2B] text-[16px] text-center mb-5">
    {product.flavor_notes}
  </p>

  <div class="w-90 border-b-1 border-[#2B2B2B] mx-auto mb-5"></div>

  <!-- Blend -->
  <p class="manrope text-[#2B2B2B] text-[16px] text-center mb-2">Blend</p>
  <p class="manrope text-[#2B2B2B] text-[16px] text-center mb-5">
    {product.blend}
  </p>

  <div class="w-90 border-b-1 border-[#2B2B2B] mx-auto mb-5"></div>

  <!-- Proces -->
  <p class="manrope text-[#2B2B2B] text-[16px] text-center mb-2">Proces</p>
  <p class="manrope text-[#2B2B2B] text-[16px] text-center mb-5">
    {product.process}
  </p>
  <div class="w-90 border-b-1 border-[#2B2B2B] mx-auto mb-5"></div>

  <!-- Anbefalede produkter -->
  <h2
    class="text-[#2B2B2B] georama text-[40px] mt-10 mb-5 text-center md:text-[64px]"
  >
    Andre produkter, du måske vil kunne lide
  </h2>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 px-4">
    {
      recommendedProducts.map((prod) => (
        <Produkter key={prod.slug} data={prod} />
      ))
    }
  </div>
</MainLayout>

<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    let qty = 1;
    const quantityEl = document.getElementById("quantity");
    const btnIncrease = document.getElementById("btn-increase");
    const btnDecrease = document.getElementById("btn-decrease");

    btnIncrease.addEventListener("click", () => {
      qty++;
      quantityEl.textContent = qty;
    });

    btnDecrease.addEventListener("click", () => {
      if (qty > 1) {
        qty--;
        quantityEl.textContent = qty;
      }
    });
  });

  const prices = { "350 g": 120, "1 kg": 295 };
  const buttons = document.querySelectorAll("#weight-buttons button");
  const priceDisplay = document.getElementById("price-display");

  buttons.forEach((btn) => {
    btn.addEventListener("click", () => {
      // Fjern aktiv klasse fra alle
      buttons.forEach((b) =>
        b.classList.remove("bg-[#455F50]", "text-[#F9F6F1]")
      );
      // Tilføj aktiv klasse til den valgte
      btn.classList.add("bg-[#455F50]", "text-[#F9F6F1]");

      const weight = btn.getAttribute("data-weight");
      priceDisplay.textContent = `Pris: ${prices[weight]} DKK`;
    });
  });

  // Sæt den første knap som aktiv ved start
  buttons[0].classList.add("bg-[#455F50]", "text-[#F9F6F1]");
</script>
